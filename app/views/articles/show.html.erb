<h1><%= @article.title%></h1>

<p><%= @article.body %></p>

<%= link_to "Editar", edit_article_path(@article) %>

<%= button_to "Apagar", article_path(@article),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>

<h2>Comments</h2>
<%= render @article.comments %>

<h2>Add a comment:</h2>

<%= render 'comments/form' %>

<p><%= link_to "Voltar", root_path %></p>