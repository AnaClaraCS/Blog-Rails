<%= form_with model: article do |form| %>
  <div>
    <%= form.label :title, class: "form-label h4" %>
    <%= form.text_field :title, class: "form-control" %>
    <% article.errors.full_messages_for(:title).each do |message| %>
      <div class="text-danger"><i class="bi bi-exclamation-circle-fill"></i> <%= message %></div>
    <% end %>
  </div>
  <br>
  <div>
    <%= form.label :body, class: "form-label h4" %>
    <%= form.text_area :body, class: "form-control"  %>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div class="text-danger"><i class="bi bi-exclamation-circle-fill"></i> <%= message %></div>
    <% end %>
  </div>
  <br>
  <div class="mb-3 row align-items-center">
    <div class="col-auto">
      <%= form.label :status, class: "form-label h4"  %><br>
    </div>
    <div class="btn-group col-auto" role="group" aria-label="Basic radio toggle button group">
      <%= form.radio_button :status, 'public', id: 'btnradio-public', checked: true, class: "btn-check" %>
      <%= form.label :status, 'PÃºblico', class: 'btn btn-outline-primary m-0', for: 'btnradio-public' %>

      <%= form.radio_button :status, 'private', id: 'btnradio-private', class: "btn-check" %>
      <%= form.label :status, 'Privado', class: 'btn btn-outline-primary m-0', for: 'btnradio-private' %>

      <%= form.radio_button :status, 'archived', id: 'btnradio-archived', class: "btn-check" %>
      <%= form.label :status, 'Arquivado', class: 'btn btn-outline-primary m-0', for: 'btnradio-archived' %>
    </div>
  </div>

  <div class="d-flex justify-content-center mb-3">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
